{
    "js": {
        "src": "./src/js/**/*.js",
        "dest": {
            "path": "public/assets/js",
            "filename": "app.js"
        }
    },
    "sass": {
        "src": "./src/scss/**/*.scss",
        "dest": "./public/assets/css",
        "options": {
            "outputStyle": "compressed",
            "sourceComments": false
        }
    },
    "html": {
        "src": "./src/html/**/*.html",
        "dest": "./public",
        "wrappingTemplate": "./src/html/template.htm"
    },
    "server": {
        "port": 3000,
        "wwwroot": "public"
    }
}
